@{
    @model Services.Models.SobreViewModel;
    Layout = "LayoutPainel";
}


<!-- Main Content -->
<div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Deletar</h1>
        <p class="mb-4">
            As informações abaixo serão excluídas do sistema.
        </p>

        <!-- Form -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Cadastro</h6>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("remover", "Sobre", FormMethod.Post, new { id = "form-remove" }))
                {
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="@Model.Descricao" readonly>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" id="Conteudo">@Model.Conteudo</textarea>
                    </div>
                    <div class="form-group">
                    </div>
                    <div>
                        <input type="hidden" name="id" value="@Model.Id" readonly>
                    </div>
                    @if (Model.StatusAtivoFormatoChar == 'S')
                    {
                        <div class="alert alert-danger col-md-6" role="alert">
                            Não é possível remover uma descrição Ativa.
                        </div>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-info">Excluir</button>
                    }
                }
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
<!-- End of Content Wrapper -->

@section Scripts {
    <script src="~/painel/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        CKEDITOR.replace('Conteudo');
    </script>
}