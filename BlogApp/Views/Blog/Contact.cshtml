@{
    @model Services.Models.ContatoViewModel;
    Layout = "LayoutBlog";
}

<!-- Page Header-->
<header class="masthead" style="background-image: url('assets/img/contact-bg.jpg')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>Clean Blog</h1>
                    <span class="subheading">A Blog Theme by Start Bootstrap</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container px-7 my-7 col-md-6">
    @using (Html.BeginForm("salvarContato", "Contato", FormMethod.Post, new { id = "form-salvar" }))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="mb-3">
            @Html.LabelFor(x => x.Nome, new { htmlAttributes = new { @class = "form-label" } })
            @Html.EditorFor(x => x.Nome, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="mb-3">
            @Html.LabelFor(x => x.Email, new { htmlAttributes = new { @class = "form-label" } })
            @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div>
            @Html.LabelFor(x => x.Mensagem)
        </div>
        <div class="form-group">
            @Html.TextAreaFor(x => x.Mensagem, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="d-grid">
            <button class="btn btn-primary btn-lg" id="submitButton" type="submit">Enviar</button>
        </div>
    }
</div>


@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

