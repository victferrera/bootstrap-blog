@{
    @model Dominio.Autor;
    Layout = "LayoutPainel";
}


<!-- Main Content -->
<div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Deletar</h1>
        <p class="mb-4">
            As informações abaixo serão excluídas do sistema, juntamente com os posts vinculados a esse Autor.
        </p>

        <!-- Form -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Cadastro</h6>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("remover", "Autor", FormMethod.Post, new {id="form-remove"}))
                {
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="@Model.Nome" readonly>
                </div>  
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="@Model.Youtube" readonly>
                </div> 
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="@Model.Twitter" readonly> 
                </div> 
                 <div class="form-group">
                    <input type="text" class="form-control" placeholder="@Model.Github" readonly>  
                </div>    
                 <div class="form-group">
                    <input type="text" class="form-control" placeholder="@Model.Linkedin" readonly>        
                </div>
                <div class="form-group">
                    <textarea name="Biografia" id="Biografia" class="form-control">@Model.Biografia</textarea>       
                </div>
                <div>
                    <input type="hidden" name="id" value="@Model.Id" readonly>
                </div>
                <button type="submit" class="btn btn-info">Excluir</button>
                }          
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
<!-- End of Content Wrapper -->

@section Scripts {
    <script src="~/painel/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        CKEDITOR.replace('Biografia');
    </script>
}