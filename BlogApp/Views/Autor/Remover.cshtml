@{
    @model Dominio.Autor;
    Layout = "LayoutPainel";
}


<!-- Main Content -->
<div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Deletar</h1>
        <p class="mb-4">
            As informações abaixo serão excluídas do sistema, juntamente com os posts vinculados a esse Autor.
        </p>

        <!-- Form -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Cadastro</h6>
            </div>
            <div class="card-body">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Principal</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#perfil" role="tab" aria-controls="profile" aria-selected="false">Posts</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="mt-3 col-md-8">
                            @using (Html.BeginForm("remover", "Autor", FormMethod.Post, new { id = "form-remove" }))
                            {
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="@Model.Nome" readonly>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="@Model.Youtube" readonly>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="@Model.Twitter" readonly>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="@Model.Github" readonly>
                                </div>
                                <div class="form-group">
                                    <input type="text" class="form-control" placeholder="@Model.Linkedin" readonly>
                                </div>
                                <div class="form-group">
                                    <textarea name="Biografia" id="Biografia" class="form-control">@Model.Biografia</textarea>
                                </div>
                                <div>
                                    <input type="hidden" name="id" value="@Model.Id" readonly>
                                </div>
                            }
                            <button type="submit" class="btn btn-info">Excluir</button>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="perfil" role="tabpanel" aria-labelledby="profile-tab">
                        <div class="table-responsive">
                            <div class="mt-3 col-md-6">
                                <table class="table" id="postsTable">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Titulo</th>
                                            <th>Data</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var post in Model.Posts)
                                        {
                                            <tr>
                                                <td>@post.Id</td>
                                                <td>@post.Titulo</td>
                                                <td>@post.DataCriacao</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
<!-- End of Content Wrapper -->

@section Scripts {
    <script src="~/painel/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        CKEDITOR.replace('Biografia');
    </script>
    <script>
        $(document).ready(function () {
            $('#postsTable').DataTable();
        });
    </script>
}