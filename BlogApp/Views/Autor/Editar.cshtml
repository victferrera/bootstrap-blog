@{
    @model Services.Models.AutorViewModel;
    Layout = "LayoutPainel";
}

<!-- Main Content -->
<div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Editar registro</h1>
        <p class="mb-4">
            Altere as informações abaixo para editar o registro.
        </p>

        <!-- Form -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Cadastro</h6>
            </div>
            <div class="card-body">
                <div class="mt-3 col-md-8">
                    @using (Html.BeginForm("editar", "Autor", FormMethod.Post, new { id = "form-editar" }))
                    {
                        <div class="form-group">
                            @Html.EditorFor(x => x.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = Model.Nome } })
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(x => x.Youtube, new { htmlAttributes = new { @class = "form-control", placeholder = Model.Youtube } })
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(x => x.Twitter, new { htmlAttributes = new { @class = "form-control", placeholder = Model.Twitter } })
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(x => x.Linkedin, new { htmlAttributes = new { @class = "form-control", placeholder = Model.Linkedin } })
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(x => x.Github, new { htmlAttributes = new { @class = "form-control", placeholder = Model.Github } })
                        </div>
                        <div class="form-group">
                            @Html.TextAreaFor(x => x.Biografia, new { htmlAttributes = new { @class = "form-control", placeholder = Model.Biografia } })
                        </div>
                        <div>
                            @Html.HiddenFor(x => x.DataCriacao)
                        </div>
                        <div>
                            @Html.HiddenFor(x => x.Id)
                        </div>
                        <button type="submit" class="btn btn-info">Salvar</button>
                    }
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
<!-- End of Content Wrapper -->

@section Scripts {
    <script src="~/painel/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        CKEDITOR.replace('Biografia');
    </script>
    <script>
        $(document).ready(function () {
            $('#postsTable').DataTable();
        });
    </script>
}