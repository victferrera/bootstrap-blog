@{
    @model Services.Models.PostViewModel;
    Layout = "LayoutPainel";
}


<!-- Main Content -->
<div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Publicação</h1>
        <p class="mb-4">
            Preencha as informações abaixo para registrar uma nova publicação.
        </p>

        <!-- Form -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Novo cadastro</h6>
            </div>
            <div class="card-body">
                <div class="col-md-8">
                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(x => x.Titulo)
                            @Html.EditorFor(x => x.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Subtitulo)
                            @Html.EditorFor(x => x.Subtitulo, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Conteudo)
                            @Html.EditorFor(x => x.Conteudo, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    }
                </div>
            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
<!-- End of Content Wrapper -->

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/painel/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        CKEDITOR.replace('Conteudo');
    </script>
}