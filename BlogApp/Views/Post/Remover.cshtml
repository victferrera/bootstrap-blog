@{
    @model Services.Models.PostViewModel;
    Layout = "LayoutPainel";
}


<!-- Main Content -->
<div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">

        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Deletar</h1>
        <p class="mb-4">
            A publicação abaixo será removida do sistema.
        </p>

        <!-- Form -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Cadastro</h6>
            </div>
            <div class="card-body">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="mt-3 col-md-8">
                            @using (Html.BeginForm("remover", "Post", FormMethod.Post, new { id = "form-remove" }))
                            {
                                <div class="form-group">
                                    <label for="titulo">Título</label>
                                    <input type="text" id="titulo" class="form-control" placeholder="@Model.Titulo" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="Subtitulo">Subtítulo</label>
                                    <input type="text" id="Subtitulo" class="form-control" placeholder="@Model.Subtitulo" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="DataCriacao">Data Criação</label>
                                    <input type="text" id="DataCriacao" class="form-control" placeholder="@Model.DataCriacao" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="Conteudo">Data de alteração</label>
                                    @if (Model.DataUltimaAlteracao == null)
                                    {
                                        <input type="text" id="DataAlteracao" class="form-control" placeholder="Registro não foi alterado..." readonly>
                                    }
                                    else
                                    {
                                        <input type="text" id="DataAlteracao" class="form-control" placeholder="@Model.DataUltimaAlteracao" readonly>
                                    }

                                </div>
                                <div class="form-group">
                                    <label for="Conteudo">Conteúdo</label>
                                    <textarea id="Conteudo" class="form-control">@Model.Conteudo</textarea>
                                </div>
                                <div>
                                    <input type="hidden" name="id" value="@Model.Id" readonly>
                                </div>
                                <button type="submit" class="btn btn-info">Excluir</button>
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
<!-- End of Content Wrapper -->

@section Scripts {
    <script src="~/painel/ckeditor/ckeditor.js"></script>
    <script type="text/javascript">
        CKEDITOR.replace('Conteudo');
    </script>
}